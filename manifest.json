{
  "manifest_version": 3,
  "name": "SeleniumBase Recorder",
  "version": "1.1",
  "description": "Records browser interactions and exports them as a SeleniumBase Python script.",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "downloads",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "minimum_chrome_version": "114"
}
